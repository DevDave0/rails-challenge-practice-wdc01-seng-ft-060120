<h1><%= @company.name %></h1>
<p>Building:</p>
<ol>
    <% @company.buildings.each do |building| %>
        <li><%= building.name %></li>
    <% end %>
</ol>

<p>Number of offices: <%= @company.offices.count %></p>

<p>Add an employee:><p>
    <%= form_for @employee do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.submit %>
    <% end  %>

